{% extends 'base.html.twig' %}

{% block body %}
    <div class="page_content row">

        <div class="offset-1 col-10 offset-1">

            <h2 class="col-12 text-center">Nouvelle situation</h2>

            {{ include('Templates/Error/flash.html.twig') }}
            
            <div class="form-group">

                {{ form_start(form, {'action': path('situation_details_new', {'situation': situation.id}), 'method': 'post', 'attr': {'novalidate': 'novalidate'}})}}

                    <div class="form-group row">
                        {{ form_label(form.competences, 'Comp√©tences mises en oeuvre', {'label_attr': {'class': 'col-12'} }) }}
                        {{ form_widget(form.competences, {'attr': {'class': 'form-control col-12 compSelectContainer'}}) }}
                    </div>

                    <div class="form-group col-12">
                        {{ form_label(form.description, 'Desciption de la situation', {'label_attr': {'class': 'col-12'} }) }}
                        {{ form_widget(form.description) }}
                    </div>

                    <table class="table col-12">
                        <tbody class="pictures" data-prototype="{{ form_widget(form.pictures.vars.prototype)|e('html_attr') }}"></tbody>
                    </table>

                    <div class="form-group row" style="margin-top: 2%;">
                        <div class="col-12">
                            <input class="btn btn-primary button-size" type="submit" value="Valider"/>
                            <input type="button" value="Retour" onclick="window.location.href='{{ path('user_index') }}'" class="btn btn-secondary button-size"/>
                        </div>
                    </div>

                {{ form_end(form) }}

            </div>

        </div>

        {{ include('Templates/Error/error.html.twig') }}
        {{ include('Templates/Error/message.html.twig') }}

    </div>

    <script>
        {{ include('Situationdetails/Javascript/editorJS.js') }}
    </script>

{% endblock %}
