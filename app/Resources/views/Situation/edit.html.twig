{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="row page_content">

        <div class="offset-1 col-10 offset-1"> 

            <h2 class="col-12 text-center">{{mod.textStr}}</h2>   

            <div class="form-group">
                {{ form_start(situationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="form-group row">
                        {{ form_label(situationForm.libelle, "Libellé de la situation" , {'label_attr': {'class': 'col-2'} }) }}
                        {{ form_widget(situationForm.libelle, {'attr': {'class': 'form-control col-10'} }) }}
                    </div>
                    <div class="form-group row">
                        {{ form_label(situationForm.referentiels, "Référentiel(s) rattachée(s)" , {'label_attr': {'class': ' col-2'} }) }}
                        {{ form_widget(situationForm.referentiels, {'attr': {'class': 'form-control col-10'} }) }}
                    </div>
                
                    <div class="form-group row">
                        <div class="col-lg-2 col-3">
                            <input type="submit" value="{{ mod.modStr }}" class="btn btn-primary button-size" />
                        </div>
                    </div>
                        
                {{ form_end(situationForm) }}
            </div>

            <button class="btn btn-primary button-size" onclick="window.location.href='{{ path('situation_liste') }}'">
                Retour
            </button>

        </div>
                
        {{ include('Templates/Error/error.html.twig') }}
        {{ include('Templates/Error/message.html.twig') }}

    </div>  

{% endblock %}