
<!-- Liste des situations d'un utilisateur -->
        
<div class="col-2 user_nav">   
    <div class="row">
       
        {% if situationList is defined and situationList is not null %}    
                
            <ul class="col-12" >
                
                <div class="row justify-content-around">  
                    <h5 class="user_ref_lib">Situations</h5>   
                </div>
                
                {% for situation in situationList %}    
                    <div class="row justify-content-around" {% if loop.index is divisible by(2) %} style="color: rgb(0, 105, 172);" {% endif %}>         
                        <li class="user_ref_li" onclick='viewSituationDetails({{situation.id}})'>{{ situation.libelle }}</li>
                    </div>    
                {% endfor %}
                
            </ul>           
                
        {% endif %}
       
    </div> 
</div>

