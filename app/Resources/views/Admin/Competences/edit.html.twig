{% extends 'base.html.twig' %}

{% block body %}
    
    <div class="row">
        <h2 class="col-12 text-center">{{ mod.textStr }}</h2>
    </div>         
    
    <div class="form-group row" style="margin-top: 5%;">
        <div class="offset-lg-3 col-lg-6 offset-lg-3 offset-2 col-8 offset-2"> 
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                <div class="form-group row">
                    {{ form_label(form.code, "code" , {'label_attr': {'class': 'col-lg-5 col-4'} }) }}
                    {{ form_widget(form.code, {'attr': {'class': 'form-control col-lg-7 col-8'} }) }}
                </div>

                <div class="form-group row">
                    {{ form_label(form.libelle, "Libelle" , {'label_attr': {'class': 'col-lg-5 col-4'} }) }}
                    {{ form_widget(form.libelle, {'attr': {'class': 'form-control col-lg-7 col-8'} }) }}
                </div>

                <div class="form-group row">
                    <div class="col-lg-2 col-3">
                        <input type="submit" value="{{ mod.modStr }}" class="btn btn-primary button-size" />
                    </div>
                </div>
                    
            {{ form_end(form) }}
        </div>
    </div>
    
    <div class="row" style=" margin-top: 5%;">
        <div class="offset-lg-3 col-lg-2 offset-2 col-3"> 
            <button class="btn btn-primary button-size" onclick="window.location.href='{{ path('admin_competences_list') }}'">
                Retour
            </button> 
        </div>
    </div>
                
    {{ include('Templates/Error/error.html.twig') }}
    
{% endblock %}
