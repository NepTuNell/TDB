{% extends "base.html.twig" %}

{% block body %}
    
<div class="row page_content">
        
    <div class="offset-lg-4 col-lg-4 offset-lg-4 offset-1 col-10 offset-1">  
        <h1 class="col-12 text-center" style="margin-top: 15%; margin-bottom: 15%">Se connecter</h1>
        <form action="{{ path('login') }}" method="post">
            <div class="form-group row">    
                <label class="col-4" for="username">Adresse Email :</label>
                <input type="text" class="form-control col-8" id="username" required name="_username" placeholder="Renseignez votre adresse email..."/>
            </div>
            <div class="form-group row">
                <label class="col-4" for="password">Mot de passe :</label>
                <input type="password" id="password" class="form-control col-8" required name="_password" placeholder="Renseignez votre mot de passe..."/>
            </div>
            <div class="form-group row">
                <div class="col-lg-2 col-3"> 
                    <input type="submit" class="btn btn-primary button-size" value="S'identifier"/>
                </div>
                <div class="col-8">
                    <a class="popup">
                        <i class="fas fa-question-circle"></i>
                        <span>Pas encore enregistré ?<br>Cliquez sur le lien s'enregistrer en haut à droite !</span>
                    </a>
                </div>
            </div>
        </form>
        
        <!-- Erreur spécifique -->

        {% if error is defined and error is not null%}
            <div class="col-12">
                <div class="row alert alert-danger">
                    <div class="col-12 form-error text-center">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                </div>
            </div>
        {% endif %}
            
        <!-- Message flash spécifique -->

        {% for flash in app.flashes('success') %}
        <div class="col-12">
            <div class="alert alert-primary" style="margin-top: 5%">
                <div class="row">
                    <div class="col-12 text-center"> 
                        {{ flash }} 
                    </div>
                </div>
            </div>
        </div>
        {% endfor %}

    </div>     

</div>

{% endblock %}
