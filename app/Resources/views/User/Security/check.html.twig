{% extends "base.html.twig" %}

{% block body %}
    
    <div class="row">
             
        <div class="col-12"> 

            <h1 class="col-12 text-center" style="margin-top: 10%; margin-bottom: 5%">Renouvellement du mot de passe</h1>

            <form action="{{ path('user_check_account') }}" method="post" novalidate>
                <div class="form-group row">
                    <label class="offset-3 col-2 textColor" for="email">Email</label>
                    <input type="text" id="email" class="form-control col-4" required name="email" placeholder="Renseignez votre email..."/>
                </div>
                <div class="form-group row">
                    <div class="offset-3 col-lg-1 col-3">
                        <input class="btn btn-primary" type="submit" value="Valider"/>
                    </div>
                </div> 
            </form>

        </div>

        {{ include('Templates/Error/flash.html.twig') }}
        {{ include('Templates/Error/error.html.twig') }}
        {{ include('Templates/Error/message.html.twig') }}
        
    </div>
   
    
    
{% endblock %}
