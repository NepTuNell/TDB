{% extends "base.html.twig" %}

{% block body %}
    
    <div class="row">
        
        {{ include('Templates/Navigation/userNavProfile.html.twig') }}
             
        <div class="offset-2 col-8 offset-2 page_content"> 
            <h2 class="col-8 text-center" >Mot de passe</h2>
            <form action="{{ path('user_reset_password') }}" method="post" novalidate>
                <div class="form-group row">    
                    <label class="col-2" for="password">Ancien mot de passe</label>
                    <input type="password" class="form-control col-6" id="password" required name="password" placeholder="Renseignez votre mot de passe..."/>
                </div>
                <div class="form-group row">
                    <label class="col-2" for="password1">Nouveau mot de passe</label>
                    <input type="password" id="password1" class="form-control col-6" required name="confirmPassword1" placeholder="Nouveau mot de passe..."/>
                </div>
                <div class="form-group row">
                    <label class="col-2" for="password2">Confirmation</label>
                    <input type="password" id="password2" class="form-control col-6" required name="confirmPassword2" placeholder="Confirmez le mot de passe..."/>
                </div>
                {{ include('Templates/Profile/Button/buttonModify.html.twig') }} 
            </form>
            {{ include('Templates/Error/message.html.twig') }}
        </div>
        
    </div>
   
    
    
{% endblock %}
